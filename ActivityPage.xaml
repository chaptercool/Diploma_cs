<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diploma_cs.ActivityPage">
    <ScrollView>
        <VerticalStackLayout Style="{StaticResource VerticalStackProperties}">
            <Label Text="Aktywność" Style="{StaticResource Heading1}"/>
            <HorizontalStackLayout
                Padding="2, 0"
                Spacing="10">
                <ImageButton
                    x:Name="previousMonthButton"
                    Source="arrowleftactive.png"
                    Style="{StaticResource CalendarHeading2Button}"
                    Clicked="PreviousMonthClicked"/>
                <Label
                    x:Name="monthYearLabel"
                    Text="Czerwiec 2025"
                    Style="{StaticResource Heading2}"/>
                <ImageButton
                    x:Name="nextMonthButton"
                    Source="arrowrightactive.png"
                    Style="{StaticResource CalendarHeading2Button}"
                    Clicked="NextMonthClicked"/>
            </HorizontalStackLayout>
            <Grid
                x:Name="calendarGrid"
                ColumnDefinitions="*, *, *, *, *, *, *"
                RowDefinitions="*, *, *, *, *, *, *"
                ColumnSpacing="10"
                RowSpacing="10">
                
                <!--Dni tygodnia-->
                <Label
                    Text="pon"
                    FontSize="12"
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Label
                    Text="wto"
                    FontSize="12"
                    Grid.Column="1"
                    Grid.Row="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Label
                    Text="śro"
                    FontSize="12"
                    Grid.Column="2"
                    Grid.Row="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Label
                    Text="czw"
                    FontSize="12"
                    Grid.Column="3"
                    Grid.Row="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Label
                    Text="pią"
                    FontSize="12"
                    Grid.Column="4"
                    Grid.Row="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Label
                    Text="sob"
                    FontSize="12"
                    Grid.Column="5"
                    Grid.Row="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Label
                    Text="nie"
                    FontSize="12"
                    Grid.Column="6"
                    Grid.Row="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>

                <!-- dni wrzucane sa losowo -->
            </Grid>

            <RoundRectangle Style="{StaticResource BlockSeparator}"/>
            
            <Label Text="Twoje tendencje" Style="{StaticResource Heading2}"/>
            
            <Label Text="W tym tygodniu starasz się palić mniej niż zazwyczaj" Style="{StaticResource AdditionalText}"/>
            <Image
                Source="tendencyblock.png"/>
            <!--???-->
            <GraphicsView
                x:Name="DashedSeparator"
                HeightRequest="5"
                HorizontalOptions="Fill"
                VerticalOptions="Center"/>
            
            <Label Text="Zauważono większą chęć do palenia bez przyczyny" Style="{StaticResource AdditionalText}"/>
            <Image Source="tendencyblock.png"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>