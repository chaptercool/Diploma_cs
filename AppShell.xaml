<?xml version="1.0" encoding="UTF-8" ?>
<Shell  
    x:Class="Diploma_cs.AppShell"  
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
    xmlns:local="clr-namespace:Diploma_cs"  
    Title="Diploma_cs">
    <TabBar>  
        <Tab  
            Title="Ekran główny"  
            Icon="home.png">  
            <ShellContent  
                ContentTemplate="{DataTemplate local:MainPage}"/>  
        </Tab>  
        <Tab  
            Title="Aktywność"  
            Icon="calendar.png">  
            <ShellContent  
                ContentTemplate="{DataTemplate local:ActivityPage}"/>  
        </Tab>  
        <Tab  
            Title="Rejestracja aktywności"  
            Icon="add.png">  
            <ShellContent  
                ContentTemplate="{DataTemplate local:RegisterActivityPage}"/>  
        </Tab>  
        <Tab  
            Title="Porady"  
            Icon="list.png">  
            <ShellContent  
                ContentTemplate="{DataTemplate local:TipsPage}"/>  
        </Tab>  
        <Tab  
            Title="Ustawienia"  
            Icon="settings.png">  
            <ShellContent  
                ContentTemplate="{DataTemplate local:SettingsPage}"/>  
        </Tab>  
    </TabBar>  

</Shell>
