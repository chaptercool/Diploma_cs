<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diploma_cs.RegisterActivityPage">
    <ScrollView>
        <VerticalStackLayout Style="{StaticResource VerticalStackProperties}">
            <Label Style="{StaticResource Heading1}" Text="Rejestracja aktywności"/>
            <Label Style="{StaticResource Heading2}" Text="Wybierz czynność:"/>

            <Button Style="{StaticResource PrimaryButton}" Text="Zapaliłem papierosa" Clicked="OnButtonClicked"/>

            <Button Style="{StaticResource SecondaryButton}" Text="Kupiłem paczkę papierosów"/>

            <Button
                Style="{StaticResource LinkButton}"
                Text="Co muszę wybrac?"
                HorizontalOptions="Center"
                VerticalOptions="End"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>