<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diploma_cs.SecondaryPages.ReasonForActivityPage">
    <ScrollView>
        <VerticalStackLayout Style="{StaticResource VerticalStackProperties}">
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Label
                    Text="Chcę zapalić"
                    Style="{StaticResource Heading1}"
                    Grid.Column="0"/>
                <ImageButton
                    Source="x.png"
                    Style="{StaticResource Heading1Button}"
                    Grid.Column="1"
                    Clicked="OnBackButtonClicked"/>
            </Grid>
            <Label Text="Czy chcesz wskazać przyczyne dlaczego chcesz zapalić?" Style="{StaticResource Heading2}"/>
            <Button Style="{StaticResource PrimaryButton}" Text="Tak"/>
            <Button Style="{StaticResource SecondaryButton}" Text="Pomiń" Clicked="OnButtonClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>